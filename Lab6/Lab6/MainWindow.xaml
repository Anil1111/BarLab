<Window x:Class="Lab6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab6"
        mc:Ignorable="d"
        Title="MainWindow" Height="500.234" Width="1000.655">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="727*"/>
            <ColumnDefinition Width="216*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="ListBartender" HorizontalAlignment="Left" Height="276" Margin="10,34,0,0" VerticalAlignment="Top" Width="300"/>
        <ListBox x:Name="ListWaiter" HorizontalAlignment="Left" Height="276" Margin="329,34,0,0" VerticalAlignment="Top" Width="300"/>
        <ListBox x:Name="ListPatron" HorizontalAlignment="Left" Height="276" Margin="651,34,0,0" VerticalAlignment="Top" Width="300" Grid.ColumnSpan="2"/>
